{
    "version": "1.0.0",
    "automations": [
      {
        "id": "auto-commit-changes",
        "name": "Commit Autom√°tico de Mudan√ßas",
        "description": "Faz commit autom√°tico de mudan√ßas n√£o commitadas ao salvar arquivos",
        "trigger": {
          "type": "file-change",
          "patterns": ["**/*.php", "**/*.js", "**/*.css", "**/*.html", "**/*.json"]
        },
        "command": {
          "type": "shell",
          "command": "git add .; git commit -m \"Atualiza√ß√£o autom√°tica - $(Get-Date -Format 'yyyy-MM-dd HH:mm:ss')\"",
          "workingDirectory": "${workspaceFolder}",
          "shell": {
            "executable": "powershell.exe"
          }
        },
        "enabled": true,
        "delay": 4000
      },
      {
        "id": "auto-deploy-on-commit",
        "name": "Deploy Autom√°tico no Commit",
        "description": "Executa o deploy automaticamente quando h√° novos commits no reposit√≥rio",
        "trigger": {
          "type": "git-commit",
          "branch": "main"
        },
        "command": {
          "type": "shell",
          "command": "powershell -ExecutionPolicy Bypass -File .\\.cursor\\deploy.ps1",
          "workingDirectory": "${workspaceFolder}",
          "shell": {
            "executable": "powershell.exe",
            "args": ["-ExecutionPolicy", "Bypass"]
          }
        },
        "enabled": true,
        "notifications": {
          "onStart": "üöÄ Iniciando deploy autom√°tico...",
          "onSuccess": "‚úÖ Deploy conclu√≠do com sucesso!",
          "onError": "‚ùå Erro no deploy autom√°tico"
        }
      },
      {
        "id": "auto-optimize-images",
        "name": "Otimiza√ß√£o Autom√°tica de Imagens",
        "description": "Otimiza imagens automaticamente quando s√£o adicionadas √† pasta uploads",
        "trigger": {
          "type": "file-change",
          "patterns": ["uploads/**/*.png", "uploads/**/*.jpg", "uploads/**/*.jpeg"]
        },
        "command": {
          "type": "shell",
          "command": "powershell -ExecutionPolicy Bypass -File .\\.cursor\\optimize-images.ps1",
          "workingDirectory": "${workspaceFolder}",
          "shell": {
            "executable": "powershell.exe",
            "args": ["-ExecutionPolicy", "Bypass"]
          }
        },
        "enabled": false,
        "delay": 2000
      },
      {
        "id": "auto-clear-cache",
        "name": "Limpeza Autom√°tica de Cache",
        "description": "Limpa o cache automaticamente quando arquivos de configura√ß√£o s√£o alterados",
        "trigger": {
          "type": "file-change",
          "patterns": ["config.php", "cache.php", "*.env"]
        },
        "command": {
          "type": "shell",
          "command": "Remove-Item cache\\* -Force -ErrorAction SilentlyContinue; Write-Host 'Cache limpo automaticamente'",
          "workingDirectory": "${workspaceFolder}",
          "shell": {
            "executable": "powershell.exe"
          }
        },
        "enabled": true,
        "delay": 1000
      },
      {
        "id": "auto-backup-before-deploy",
        "name": "Backup Autom√°tico Antes do Deploy",
        "description": "Cria backup autom√°tico antes de executar deploy",
        "trigger": {
          "type": "manual",
          "command": "deploy"
        },
        "command": {
          "type": "shell",
          "command": "powershell -ExecutionPolicy Bypass -File .\\.cursor\\backup.ps1",
          "workingDirectory": "${workspaceFolder}",
          "shell": {
            "executable": "powershell.exe",
            "args": ["-ExecutionPolicy", "Bypass"]
          }
        },
        "enabled": true,
        "notifications": {
          "onStart": "üì¶ Criando backup autom√°tico...",
          "onSuccess": "‚úÖ Backup criado com sucesso!",
          "onError": "‚ùå Erro ao criar backup"
        }
      }
    ]
  }
  